import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

grid_size = 60
steps = 60

np.random.seed(42)

grid = np.random.choice([0, 1], size=(grid_size, grid_size), p=[0.995, 0.005])

def step(grid, stress=0.3, noise=0.05):
    new_grid = grid.copy()
    
    for i in range(grid_size):
        for j in range(grid_size):
            neighborhood = grid[max(0,i-1):min(grid_size,i+2),
                                max(0,j-1):min(grid_size,j+2)]
            
            frac_default = neighborhood.mean()
            p = stress * frac_default + noise * np.random.rand()
            
            if np.random.rand() < p:
                new_grid[i, j] = 1

    return new_grid

fractions = []

for t in range(steps):
    frac = grid.mean()
    fractions.append(frac)
    grid = step(grid)

df = pd.DataFrame({"step": range(steps), "fraction": fractions})
df.to_csv("ca_summary.csv", index=False)

# plot
plt.plot(df["step"], df["fraction"])
plt.xlabel("Time step")
plt.ylabel("Fraction defaulted")
plt.savefig("ca_fraction.png", dpi=300)
