import numpy as np
import pandas as pd

np.random.seed(42)

# number of customers
n_customers = 20000
n_months = 12

data = []

for _ in range(n_customers):
    
    base_income = np.random.normal(60000, 15000)
    volatility = np.random.uniform(0.1, 0.6)

    monthly_balances = np.abs(np.random.normal(loc=base_income * 0.05,
                                               scale=volatility * base_income,
                                               size=n_months))

    avg_spend = np.random.uniform(500, 4000)
    monthly_spends = np.abs(np.random.normal(loc=avg_spend / 12,
                                             scale=max(1, volatility * avg_spend / 12),
                                             size=n_months))
    
    mean_balance = monthly_balances.mean()
    std_balance = monthly_balances.std()
    trend_balance = np.polyfit(range(n_months), monthly_balances, 1)[0]

    mean_spend = monthly_spends.mean()
    std_spend = monthly_spends.std()
    trend_spend = np.polyfit(range(n_months), monthly_spends, 1)[0]

    credit_util = mean_balance / max(1, base_income)

    # logistic default probability
    raw = (0.4 * trend_balance +
           0.3 * credit_util +
           0.2 * volatility +
           0.1 * (std_balance / (mean_balance + 1)))

    p_default = 1 / (1 + np.exp(-raw))

    default = np.random.binomial(1, p_default)

    data.append([mean_balance, std_balance, trend_balance,
                 mean_spend, std_spend, trend_spend,
                 credit_util, volatility, default])

columns = [
    "mean_balance", "std_balance", "trend_balance",
    "mean_spend", "std_spend", "trend_spend",
    "credit_util", "volatility", "default"
]

df = pd.DataFrame(data, columns=columns)
df.to_csv("synthetic_dataset.csv", index=False)

